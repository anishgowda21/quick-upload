---
import FilesTable from "../components/FilesTable";
import { FileUploader } from "../components/image-uploader";
import SignOut from "../components/SignOut";
import AuthSkeleton from "../components/skeletons/AuthSkeleton.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Quick Upload">
  <AuthSkeleton />

  <div id="auth-component" class="hidden">
    <SignOut client:load />
  </div>

  <section
    class="mx-auto max-w-6xl px-4 sm:px-6 lg:px-8 py-10 lg:py-14"
    aria-labelledby="page-title"
  >
    <header class="mb-8">
      <div
        class="flex flex-col lg:flex-row lg:items-center lg:justify-between gap-8"
      >
        <div class="flex-1 flex items-center gap-4">
          <div class="flex-shrink-0">
            <div
              class="w-12 h-12 bg-gradient-to-br from-blue-500 to-purple-600 rounded-xl flex items-center justify-center shadow-lg"
            >
              <svg
                class="w-7 h-7 text-white"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"
                ></path>
              </svg>
            </div>
          </div>

          <div class="min-w-0 flex-1">
            <h1
              id="page-title"
              class="text-3xl sm:text-4xl font-bold tracking-tight bg-gradient-to-r from-gray-900 via-blue-800 to-purple-800 bg-clip-text text-transparent"
            >
              Quick Upload
            </h1>
            <p class="mt-2 text-gray-600 font-medium">
              Fast and secure file sharing
            </p>
          </div>
        </div>

        <div class="flex-shrink-0 lg:max-w-md w-full">
          <section
            class="rounded-xl border border-gray-200 bg-white/70 backdrop-blur-sm shadow-sm transition-all duration-300 hover:shadow-md hover:border-blue-300"
            aria-labelledby="uploader-title"
          >
            <h2 class="sr-only" id="uploader-title">Upload files</h2>
            <div class="p-4">
              <FileUploader client:load />
            </div>
          </section>
        </div>
      </div>

      <div
        class="mt-8 h-px bg-gradient-to-r from-transparent via-gray-200 to-transparent"
      >
      </div>
    </header>

    <div class="grid gap-6">
      <div class="flex items-center justify-between">
        <div class="flex items-center gap-3">
          <div
            class="w-1 h-6 bg-gradient-to-b from-blue-500 to-purple-600 rounded-full"
          >
          </div>
          <h2
            id="files-title"
            class="text-lg font-semibold text-gray-900 tracking-tight"
          >
            Your Files
          </h2>
        </div>
      </div>
      <FilesTable client:load />
    </div>
  </section>
</Layout>
